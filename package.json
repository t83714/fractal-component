{
  "private": true,
  "scripts": {
    "prettier": "prettier --write 'src/*.js' 'src/*.ts'",
    "prebundlesize": "yarn run build:umd:prod",
    "bundlesize": "bundlesize",
    "clean": "rimraf dist es lib",
    "build:umd:dev": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/index.js -o dist/fractal-component.js",
    "build:umd:prod": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/index.js -o dist/fractal-component.min.js",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build": "yarn run clean && run-p build:**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t83714/fractal-component.git"
  },
  "author": "Jacky Jiang <t83714@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/t83714/fractal-component/issues"
  },
  "homepage": "https://github.com/t83714/fractal-component",
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/node": "^7.0.0-beta.54",
    "@babel/polyfill": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-react": "^7.0.0-beta.54",
    "@babel/preset-stage-2": "^7.0.0-beta.54",
    "babel-plugin-annotate-pure-calls": "babel7",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.54",
    "bundlesize": "^0.17.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.2.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "4.0.0-beta.1",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
